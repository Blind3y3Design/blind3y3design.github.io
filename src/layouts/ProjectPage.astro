---
import Layout from "./Base.astro";
import { Picture } from "astro:assets";
import FormattedDate from "@components/FormattedDate.astro";

const { title, description, pubDate, link, status, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
  <main>
    <article class="project">
      <div class="project-info">
        <h1 class="project__title">{title}</h1>
        <div class="project__metadata">
          <span class="project__date">
            <FormattedDate date={pubDate} />
          </span>
          <span class="project__status">
            {status}
          </span>
        </div>
        <a href={link} class="project__link">View Project</a>
      </div>
      <div class="project-content">
        <div class="hero-image">
          <Picture src={heroImage} formats={["avif", "webp"]} alt={title} />
        </div>
        <div class="prose">
          <slot />
        </div>
      </div>
    </article>
  </main>
</Layout>
