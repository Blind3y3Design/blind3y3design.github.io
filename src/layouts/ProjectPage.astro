---
import Layout from "./Base.astro";
import { Picture } from "astro:assets";
import FormattedDate from "@components/FormattedDate.astro";

const { title, description, pubDate, link, status, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
  <main>
    <article class="project">
      <div class="project-info">
        <h1 class="project__title">{title}</h1>
        <div class="project__metadata">
          <span class="project__date">
            <FormattedDate date={pubDate} />
          </span>
          <span class="project__status">
            {status}
          </span>
        </div>
        <a href={link} class="project__link">View Project</a>
      </div>
      <div class="project-content">
        <div class="hero-image">
          <Picture src={heroImage} formats={["avif", "webp"]} alt={title} />
        </div>
        <div class="prose">
          <slot />
        </div>
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }

  .project {
    margin: 0 auto;
    max-width: 1400px;
  }

  .project-info {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0 auto 2rem;
    max-width: calc(100% - 2em);
    width: 80ch;
  }

  .project__metadata {
    align-items: center;
    display: flex;
    gap: 0.5rem;

    * {
      font-size: var(--font-size-md);
      margin: 0;
    }
  }

  .project__status {
    background: hsl(0 0% 0% / 0.75);
    border-radius: 2px;
    padding: 4px 8px;
    text-transform: capitalize;
  }

  .project__link {
    background: var(--link-color);
    border-radius: 0.25em;
    color: var(--body-background);
    display: inline-block;
    font-weight: 600;
    padding: 0.5em 1em;
    text-decoration: none;
    transition: all 0.25s ease-in-out;

    &:hover {
      background: var(--link-color-hover);
    }
  }

  .project-content {
    display: grid;
    grid-template-columns: 1fr;
  }

  .hero-image {
    margin: 0 auto;
    margin-block-end: 1rem;
    max-width: 1000px;
    width: 100%;
  }

  .hero-image img {
    aspect-ratio: 2/1;
    border-radius: 12px;
    display: block;
    margin: 0 auto;
    object-fit: cover;
    object-position: top center;
  }

  .prose {
    width: 80ch;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 1em;
  }
</style>
