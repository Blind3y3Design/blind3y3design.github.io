---
import Layout from "./Base.astro";
import { Picture } from "astro:assets";
import FormattedDate from "@components/FormattedDate.astro";

const { title, description, pubDate, link, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
  <main>
    <article>
      <div class="hero-image">
        <Picture src={heroImage} formats={["avif", "webp"]} alt={title} />
      </div>
      <div class="title">
        <div class="date">
          <FormattedDate date={pubDate} />
        </div>
        {
          link ? (
            <a href={link} class="site-link">
              <h1>{title}</h1>
            </a>
          ) : (
            <h1>{title}</h1>
          )
        }
        <hr />
      </div>
      <div class="prose">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }

  .hero-image {
    margin: 0 auto;
    max-width: 1400px;
    width: 100%;
  }

  .hero-image img {
    aspect-ratio: 2/1;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    display: block;
    margin: 0 auto;
    object-fit: cover;
    object-position: top center;
  }

  .prose {
    width: 80ch;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 1em;
  }

  .title {
    padding: 1em 0;
    text-align: center;
    width: 80ch;
    max-width: calc(100% - 2rem);
    margin: 0 auto;
  }

  .site-link {
    text-decoration: none;
  }

  .title h1 {
    margin: 0 0 0.5em 0;

    .site-link & {
      color: var(--link-color);
      text-decoration: underline;
      text-decoration-skip-ink: auto;
      text-decoration-thickness: 2px;
      text-underline-offset: 0.2ex;
      transition: 0.25s ease-in-out;
    }

    .site-link:hover & {
      color: var(--link-color-hover);
    }
  }

  .date {
    margin-bottom: 0.5em;
    color: oklch(var(--white-raw) / 0.6);
  }

  .last-updated-on {
    font-style: italic;
  }
</style>
