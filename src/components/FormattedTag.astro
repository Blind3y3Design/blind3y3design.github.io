---
interface Props {
  tag: string;
}

const { tag } = Astro.props;

const capitalizations = [
  "AI",
  "API",
  "CSS",
  "CMYK",
  "DOM",
  "DesignOps",
  "DRY",
  "ECMAScript",
  "ES",
  "ESM",
  "GitHub",
  "HSL",
  "HTML",
  "iPhone",
  "IA",
  "JS",
  "JSON",
  "jQuery",
  "LCH",
  "MySQL",
  "PHP",
  "RGB",
  "RGBA",
  "SQL",
  "SVG",
  "TC39",
  "UI",
  "UX",
  "WebKit",
  "W3C",
  "WTF",
  "XPath",
  "XSLT",
];

const formatTag = (tag: string) => {
  tag = (tag + "").replace(/-/g, " ");

  for (let capitalization of capitalizations) {
    let lowercase = capitalization.toLowerCase();
    let regex = new RegExp(`\\b${lowercase}(?=\\b|\\d)`, "gi");
    tag = tag.replace(regex, capitalization);
  }

  return tag.replace(/\b\w/g, (l) => l.toUpperCase());
};

const formattedTag = formatTag(tag);
---

{formattedTag}
