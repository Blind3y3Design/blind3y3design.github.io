---
import { Image } from 'astro:assets';
import LinkButton from '@components/LinkButton.astro';

import heroImage from '@images/headshot.png';
---

<section class="home-hero content-container">
    <div class="home-hero__inner content-container__inner">
        <div class="home-hero__content">
            <h1 class="home-hero__title">
                Design Operations
                <span class="text-accent-5">& Product Strategy</span>
            </h1>
            <p class="home-hero__subtitle">
                15+ years crafting exceptional digital experiences that drive
                business growth and user satisfaction across B2C and B2B
                products.
            </p>
            <div class="home-hero__actions">
                <LinkButton href="/work" color="white" size="l" style="fill">
                    View My Work
                </LinkButton>
                <LinkButton
                    href="/link-to-resume"
                    color="white"
                    size="l"
                    style="ghost"
                >
                    Download Resume
                </LinkButton>
            </div>
            <div class="home-hero__stats">
                <p class="home-hero__stat-item">
                    <span class="stat__highlight">15+</span>
                     Years Experience
                </p>
                <p class="home-hero__stat-item">
                    <span class="stat__highlight">50+</span>
                     Projects Shipped
                </p>
                <p class="home-hero__stat-item">
                    <span class="stat__highlight">$20M+</span>
                     Revenue Impact
                </p>
            </div>
        </div>
        <div class="home-hero__image">
            <Image
                src={heroImage}
                alt="Headshot of Adam Sedwick"
                layout="constrained"
                width={550}
                height={550}
            />
        </div>
    </div>
</section>

<style>
    .home-hero__inner {
        align-items: center;
        display: flex;
        flex-direction: row;
        gap: 100px;
        justify-content: center;
    }

    .home-hero__content {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
        max-width: 550px;
    }

    .home-hero__title {
        font-size: 60px;
        font-weight: bold;

        span {
            display: inline-block;
        }
    }

    .home-hero__subtitle {
        font-size: 24px;
        margin: 0;
        color: var(--color-text-secondary);
    }

    .home-hero__actions {
        display: flex;
        gap: var(--space-2);
    }

    .home-hero__stats {
        border-top: 1px solid var(--color-white);
        display: flex;
        justify-content: space-between;
        padding-top: var(--space-4);
    }

    .home-hero__stat-item {
        align-items: center;
        display: flex;
        flex-direction: column;
        font-size: 14px;
        margin: 0;
        text-align: center;
    }

    .stat__highlight {
        font-weight: bold;
        font-size: 32px;

        .home-hero__stat-item:first-child & {
            color: var(--color-accent-3);
        }
        .home-hero__stat-item:nth-child(2) & {
            color: var(--color-accent-2);
        }
        .home-hero__stat-item:nth-child(3) & {
            color: var(--color-accent-4);
        }
    }

    .home-hero__image {
        align-items: center;
        aspect-ratio: 1;
        border: 1px solid var(--color-white);
        border-radius: var(--border-radius-l);
        display: flex;
        max-width: 550px;
        overflow: hidden;
        width: 100%;
    }
</style>
