---
const today = new Date();
---

<footer class="footer">
    <div class="footer__inner">
        <p class="footer__copyright">
            &copy; {today.getFullYear()} Adam Sedwick
        </p>
    </div>
</footer>

<style>
    footer {
        background: var(--footer-background);
        color: var(--footer-text-color);
        display: flex;
        justify-content: center;
        padding: 1rem;

        @media (min-width: 600px) {
            padding: 2rem;
        }
    }

    .footer__inner {
        align-items: center;
        display: flex;
        flex-direction: column-reverse;
        gap: 1rem;
        justify-content: space-between;

        @media (min-width: 600px) {
            flex-direction: row;
            max-width: 1400px;
            width: 100%;
        }
    }

    .footer__copyright {
        margin: 0;
    }

    .social-links {
        display: flex;
        gap: 0.5rem;
    }
</style>
