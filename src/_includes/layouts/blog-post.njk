---
layout: layouts/base
layoutType: post
---
<div class="blog-post">
    <section class="blog-post__heading">
        <h1 class="blog-post__title">{{title}}</h1>
        {% if is_post %}
            <p class="blog-post__date">Posted on {{ date | postDate }}</p>
            <p class="blog-post__read-time">{{content | emojiReadTime}}</p>
        {% endif %}
    </section>
    {% if headerImage %}
        {% set headerImageAltText = "" %}
        {% if headerImageAlt %}
            {% set headerImageAltText = headerImageAlt %}
        {% endif %}
        <section class="blog-post__header-image {% if headerImageContained %}blog-post__header-image--contained{% endif %}">
            {% if "svg" in headerImage %}
                {% svg headerImage %}
            {% else %}
                {% image headerImage, headerImageAltText, "100vw" %}
            {% endif %}
        </section>
    {% endif %}
    <section class="blog-post__post-content">
        {{ content | safe }}
    </section>
    {% if tags %}
        {% import "_tags.njk" as tagsUtil with context %}
        {% set tags = post.data.tags if post.data else tags %}
        {{ tagsUtil.list(tags) }}
    {% endif %}
</div>